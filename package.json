{
  "name": "slurm-deploy-panel",
  "version": "1.0.0",
  "description": "Web-based deployment panel for Slurm cluster",
  "main": "main.go",
  "scripts": {
    "dev": "go run main.go",
    "build": "go build -o slurm-deploy-panel",
    "frontend-dev": "vite --config vite.config.js",
    "frontend-build": "vite build --config vite.config.js",
    "frontend-serve": "vite preview --config vite.config.js",
    "build-all": "npm run frontend-build && npm run build"
  },
  "dependencies": {
    "vue": "^3.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.0.0",
    "vite": "^3.0.0"
  }
}